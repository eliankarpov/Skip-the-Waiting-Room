<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkingHours">

    <TextView
        android:id="@+id/mondayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tuesdayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Tuesday:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/mondayText" />

    <TextView
        android:id="@+id/wednesdayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Wednesday:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tuesdayText" />

    <TextView
        android:id="@+id/thursdayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Thursday:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/wednesdayText" />

    <TextView
        android:id="@+id/fridayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Friday:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/thursdayText" />

    <TextView
        android:id="@+id/saturdayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Saturday:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/fridayText" />

    <TextView
        android:id="@+id/sundayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Sunday:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/saturdayText" />

    <EditText
        android:id="@+id/editMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="Closed"
        app:layout_constraintStart_toStartOf="@id/editTues" />

    <EditText
        android:id="@+id/editTues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="Closed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tuesdayText"
        app:layout_constraintTop_toTopOf="@id/tuesdayText" />

    <EditText
        android:id="@+id/editWednes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="Closed"
        app:layout_constraintStart_toStartOf="@id/editTues"
        app:layout_constraintTop_toTopOf="@id/wednesdayText" />

    <EditText
        android:id="@+id/editThurs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="Closed"
        app:layout_constraintStart_toStartOf="@id/editMon"
        app:layout_constraintTop_toTopOf="@id/thursdayText" />

    <EditText
        android:id="@+id/editFri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="Closed"
        app:layout_constraintStart_toStartOf="@id/editMon"
        app:layout_constraintTop_toTopOf="@id/fridayText" />

    <EditText
        android:id="@+id/editSat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="Closed"
        app:layout_constraintStart_toStartOf="@id/editMon"
        app:layout_constraintTop_toTopOf="@id/saturdayText" />

    <EditText
        android:id="@+id/editSun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="Closed"
        app:layout_constraintStart_toStartOf="@id/editMon"
        app:layout_constraintTop_toTopOf="@id/sundayText" />

    <Button
        android:id="@+id/updateWorkHrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update working hours"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/sundayText" />
</androidx.constraintlayout.widget.ConstraintLayout>